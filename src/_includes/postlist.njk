<div class="card">
  <div class="image">
    <img src="{{ post.data.image }}" alt="" />
  </div>
  <div class="info">
    <h2>{{ post.data.title }}</h2>
    <date>{{ post.data.date | postDate }}</date>
    <p>{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="btn">Read More</a>
  </div>
</div>
